{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmit": true          // ðŸ”¹ clave: evita generar .js, deja que esbuild compile
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", ".serverless", ".build"]
}
